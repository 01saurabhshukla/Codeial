
    <h1>Codiel / <%= title %></h1>

    <section id="feed-posts">
        <h4>Posts</h4>
        <form action="/posts/create" id="new-post-form" method="POST">
            <textarea name="content" cols="30" rows="5" placeholder="Type here...."></textarea>
            <input type="submit" value="POST">
        </form>

        <div id="posts-list-container">
            <ul>

                <% for(post of posts){ %>
                <li>

                    <p>
                        <%= post.content %>
                        <br>
                        <%= post.user.name %>
                    </p>
                    
                </li>
                <% } %>
            </ul>

        </div>

    </section>
    